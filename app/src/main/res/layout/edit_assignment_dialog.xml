<!-- res/layout/edit_assignment_dialog.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Assignment Title"
        android:textSize="16sp"
        />

    <!-- Add more EditText fields for other assignment details if needed -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editDueDate"
        android:hint="Enter Assignment Due Date (eg. 2024-04-15)"
        android:textSize="16sp">

    </EditText>

</LinearLayout>
