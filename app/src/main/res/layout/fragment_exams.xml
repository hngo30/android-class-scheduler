<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FRAGMENTS.ExamsFragment">

    <EditText
        android:id="@+id/editTextLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exam Name" />

    <EditText
        android:id="@+id/editTextLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLine1"
        android:layout_marginTop="8dp"
        android:hint="Location" />

    <EditText
        android:id="@+id/editTextLine3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLine2"
        android:layout_marginTop="8dp"
        android:hint="Date" />

    <EditText
        android:id="@+id/editTextLine4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLine3"
        android:layout_marginTop="8dp"
        android:hint="Time" />

    <EditText
        android:id="@+id/editTextLine5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLine4"
        android:layout_marginTop="8dp"
        android:hint="Exam Details" />


    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLine5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="71dp"
        android:layout_toStartOf="@+id/editButton"
        android:text="Add Item" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLine5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="69dp"
        android:text="Edit" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addButton"
        android:layout_marginTop="0dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />
</RelativeLayout>